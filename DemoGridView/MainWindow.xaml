<Window x:Class="DemoGridView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoGridView"
        mc:Ignorable="d"
        Title="DataGrid Tutorial" Background="Transparent" Height="800" Width="800">
    <Grid>
        <DataGrid x:Name="DataGrid1" Margin="10,48,10,398" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Person Id" Binding="{Binding PersonId}" Width="200"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="200"/>
                <DataGridTextColumn Header="Profession" Binding="{Binding Profession}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddPersonButton" Content="Add new Person" HorizontalAlignment="Left" Margin="370,569,0,0" VerticalAlignment="Top" Click="AddNewPersonButton_Clicked"/>
        <TextBox x:Name="AddPersonId" HorizontalAlignment="Left" Margin="355,467,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AddPersonName" HorizontalAlignment="Left" Margin="355,490,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AddPersonLastName" HorizontalAlignment="Left" Margin="355,513,0,0" Text="Last Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AddPersonProfession" HorizontalAlignment="Left" Margin="355,536,0,0" Text="Profession" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
